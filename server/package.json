{
  "name": "hillel-node-js-levin",
  "version": "1.0.0",
  "description": "homework for Hillel Node.js course",
  "main": "src/index.ts",
  "scripts": {
    "build": "npm run server:build && npm run client:build",
    "server:build": "npx tsc",
    "server:start": "node dist/index.js",
    "server:dev": "nodemon src/index.ts",
    "server:test": "echo \"Error: no test specified\" && exit 1",
    "server:lint": "eslint src/**/*.ts",
    "server:lint:fix": "eslint src/**/*.ts --fix",
    "client:dev": "npm run dev --prefix ../client",
    "client:build": "npm run build --prefix ../client",
    "client:lint": "npm run lint --prefix ../client",
    "client:preview": "npm run preview --prefix ../client"
  },
  "nodemonConfig": {
    "ignore": []
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run server:lint:fix"
    }
  },
  "keywords": [
    "node.js",
    "express",
    "mongodb"
  ],
  "author": "weblevin@gmail.com",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "busboy": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "joi": "^17.12.2",
    "mongodb": "^6.4.0",
    "mongoose": "^8.2.1",
    "mongoose-paginate-v2": "^1.8.0",
    "mongoose-unique-validator": "^5.0.0",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/busboy": "^1.5.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/joi": "^17.2.3",
    "@types/mongoose": "^5.11.97",
    "@types/mongoose-unique-validator": "^1.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.13",
    "@types/passport-jwt": "^4.0.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^4.3.8",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
